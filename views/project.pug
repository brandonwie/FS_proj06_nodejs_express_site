extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= title
        p.lead.text-light= desc
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each skill in tech
            li= skill
        a.button.expanded(href=`${live}` target="_blank") Live Demo
        a.button.expanded(href=`${github}` target="_blank") GitHub Repo
    - for (let i = 1; i < images.length; i++)
      img.image(src=`${images[i]}`)
